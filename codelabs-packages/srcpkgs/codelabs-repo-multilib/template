# Template file for 'codelabs-repo-multilib'
pkgname=codelabs-repo-multilib
version=6
revision=4
metapackage=yes
archs="x86_64"
short_desc="CODE LABS drop-in file for the multilib repository"
maintainer="Orphaned <orphan@codelabs.org>"
license="Public Domain"
homepage="http://www.codelabs.org"

do_install() {
	vmkdir usr/share/xbps.d
	for f in multilib multilib-nonfree; do
		echo "repository=https://repo-default.codelabs.org/current/${f/-/\/}" > \
			${DESTDIR}/usr/share/xbps.d/10-repository-${f}.conf
	done
}

codelabs-repo-multilib-nonfree_package() {
	short_desc="${short_desc/multilib/multilib\/nonfree}"
	pkg_install() {
		vmove usr/share/xbps.d/10-repository-multilib-nonfree.conf
	}
}

