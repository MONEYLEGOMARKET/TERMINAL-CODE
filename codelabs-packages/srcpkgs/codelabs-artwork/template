# Template file for 'codelabs-artwork'
pkgname=codelabs-artwork
version=20221013
revision=1
short_desc="CODE LABS artwork"
maintainer="Enno Boland <gottox@codelabs.org>"
license="custom:Public Domain" #no vlicense check
homepage="http://www.codelabs.org"

do_install() {
	vinstall ${FILESDIR}/splash.png 644 usr/share/codelabs-artwork
	vinstall ${FILESDIR}/oldsplash.png 644 usr/share/codelabs-artwork
	vinstall ${FILESDIR}/splashwhite.png 644 usr/share/codelabs-artwork
	vinstall ${FILESDIR}/codelabs-logo.png 644 usr/share/codelabs-artwork
	vinstall ${FILESDIR}/codelabs-transparent.png 644 usr/share/codelabs-artwork
	vinstall ${FILESDIR}/codelabs-logo.svg 644 usr/share/codelabs-artwork
	for size in 16 22 32 48 64 128 256 512; do
		vinstall ${FILESDIR}/icons/codelabs-logo-${size}.png 644 usr/share/icons/hicolor/${size}x${size}/apps codelabs-logo.png
		vinstall ${FILESDIR}/icons/codelabs-logo-notext-${size}.png 644 usr/share/icons/hicolor/${size}x${size}/apps codelabs-logo-notext.png
	done
	vinstall ${FILESDIR}/icons/codelabs-logo.svg 644 usr/share/icons/hicolor/scalable/apps
	vinstall ${FILESDIR}/icons/codelabs-logo-notext.svg 644 usr/share/icons/hicolor/scalable/apps
}
